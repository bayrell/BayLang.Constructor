/*!
 *  BayLang Constructor
 */

namespace BayLang.Constructor.Frontend.Annotations;

use BayLang.Constructor.Frontend.Editor.Widget;


interface WidgetSettingsInterface
{
	/**
	 * Returns widget name
	 */
	string getName();
	
	
	/**
	 * Returns short name
	 */
	string getShortName();
	
	
	/**
	 * Can drag
	 */
	bool canDrag(Widget widget, string kind);
	
	
	/**
	 * Returns params
	 */
	Collection<string> getParams();
	
	
	/**
	 * Returns default template
	 */
	Dict<fn> getDefaultTemplate();
}