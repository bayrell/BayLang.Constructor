/*!
 *  BayLang Constructor
 */

namespace BayLang.Constructor.WidgetPage.Annotations;

use Runtime.Entity.Factory;


interface WidgetSettingsInterface
{
	/**
	 * Returns widget name
	 */
	string getName();
	
	
	/**
	 * Returns short name
	 */
	string getShortName();
	
	
	/**
	 * Can drag
	 */
	bool canDrag(var widget, string kind);
	
	
	/**
	 * Returns params
	 */
	Collection<Factory> getParams();
	
	
	/**
	 * Returns default template
	 */
	Dict<fn> getDefaultTemplate();
}